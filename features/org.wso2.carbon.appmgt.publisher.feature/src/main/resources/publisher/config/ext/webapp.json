{
    "applyTo": "webapp",


    "import": [
        "/modules/ext/scripts/rxt.importer.js",
        "/modules/ext/scripts/form.exporter.js",
        "/modules/ext/scripts/asset.exporter.js",
        "/modules/ext/scripts/webapp.action.save.js",
 	"/modules/ext/scripts/asset.lifecycle.action.save.js",
        "/modules/ext/scripts/form.importer.js"],


    "fieldPropertyRules": [
        "overview.name:label=Name",
        "overview.provider:order=2",
        "overview.description:order=3",
        "overview.version:order=4",
        "overview.isbn:order=5",
        "overview.name:search=true",
        "overview.provider:search=true",
        "overview.version:search=true"
    ],

    "tables": [

        {
            "name": "*"
        }

    ],

    "fieldProperties": [
        {
            "field": "*",
            "name": "hidden",
            "value": "false"
        },
        {
            "field": "overview.*",
            "name": "editable",
            "value": true
        },
        {
            "field": "images.*",
            "name": "editable",
            "value": false
        },
        {
            "field": "overview.*",
            "name": "save",
            "value": "webapp.action.save"
        },
        {
            "field": "overview.provider",
            "name": "readOnly",
            "value": true
        },
        {
            "field": "overview.displayName",
            "name": "readOnly",
            "value": false
        },
        {
            "field": "overview.displayName",
            "name": "editable",
            "value": true
        },
        {
            "field":"overview.provider",
            "name":"editable",
            "value":false
        }
        ,{
            "field": "*.lifeCycle",
            "name": "save",
            "value": "asset.lifecycle.action.save"
        },
        {
            "field": "overview.businessOwner",
            "name": "editable",
            "value": true
        }
    ],

    "fields": [
        {
            "name": "lifeCycle",
            "table": "*",
            "label": "Life Cycle",
            "value": "WebAppLifeCycle"

        },
        {
            "name": "banner",
            "table": "images",
            "type": "imageFile"

        },
        {
            "name": "thumbnail",
            "table": "images",
            "type": "imageFile"
        },
        {
            "name":"description",
            "table":"overview",
            "value":""
        }

    ],
    "permissions": {
        "created": ["Internal/private_{overview_provider}"],
        "in-review": ["Internal/publisher", "Internal/private_{overview_provider}"],
        "published": ["Internal/publisher","Internal/private_{overview_provider}"],
        "unpublished": ["Internal/publisher","Internal/private_{overview_provider}"],
        "approved":["Internal/publisher","Internal/private_{overview_provider}"],
        "rejected":["Internal/private_{overview_provider}"],
        "retired":["Internal/private_{overview_provider}"],
        "deprecated":["Internal/publisher","Internal/private_{overview_provider}"]
    },


    "storage": {

        "images_banner": {

            "lifecycle": {
                "created": ["Internal/private_{overview_provider}"],
                "in-review": ["Internal/publisher", "Internal/private_{overview_provider}"],
                "published": ["Internal/everyone", "Internal/private_{overview_provider}", "Internal/publisher"],
                "unpublished": ["Internal/publisher","Internal/private_{overview_provider}"]
            }
        },

        "images_thumbnail": {

            "lifecycle": {
                "created": ["Internal/private_{overview_provider}"],
                "in-review": ["Internal/publisher", "Internal/private_{overview_provider}"],
                "published": ["Internal/everyone", "Internal/private_{overview_provider}", "Internal/publisher"],
                "unpublished": ["Internal/publisher","Internal/private_{overview_provider}"]
            }
        }

    }
}
