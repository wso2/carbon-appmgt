<div class="content-div">
	<div class="row-fluid" id="app-upload-progress"  style="display: none">		
		    <div class="progress progress-striped active">
		    <div class="bar" style="width: 90%;"></div>
		    </div>
		    
	</div>
	
	<div class="row-fluid well-small" id="app-upload-progress-done" style="display: none; padding-left: 44px">	  
		    <div class="alert alert-info container col-md-11">
		    <button type="button" class="close" data-dismiss="alert">&times;</button>
		    <h4>App is uploaded successfully!</h4>
		    	Please enter application details below. 
		    </div>
	</div>

	<div class="row-fluid">
		<form class="form-horizontal" id='form-asset-create' action="{{url "/api/asset/mobileapp/"}}{{artifact.id}}" method="post" enctype="multipart/form-data">
			<!--<div class="well-small offset9"></div>-->
			<input type="hidden" id="appmeta" name="appmeta" value="">
			<input type="hidden" name="version" value="1.0">
			<input type="hidden" name="provider" value="1WSO2Mobile">
			<input	type="hidden" id="txtMarketHidden" name="markettype" value="">
			<input	type="hidden" id="txtOSHidden" name="platform" value="">
			

			<div class="form-group">
				<label class="control-label col-sm-2" for="txtName">Name</label>
				<div class="col-sm-10">
					<input class="field col-md-6" type="text" name="overview_name" id="txtName" disabled="disabled"
                           value="{{artifact.attributes.overview_name}}"/>
					<input type="hidden" name="app_id" id="app_id" value="{{artifact.id}}"/>
				</div>
			</div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="txtDisplayName">Display Name</label>
                <div class="col-sm-10">
                    <input class="field col-md-6" type="text" name="displayName" id="txtDisplayName"
                           value="{{artifact.attributes.overview_displayName}}" title="Display Name"/>
                </div>
            </div>
			<!--
			<div class="form-group">
			<label class="control-label" for="txtName">Package Name</label>
			<div class="col-sm-10">
			<input class="field col-md-6" type="text" name="package_name" id="txtPackageName">
			</div>
			</div>
			-->
			<div class="form-group">
				<label class="control-label col-sm-2" for="txtDescription">Description <span style="color:#FF0000">*</span><br><small>(Max. 1000 characters)</small></label>
				<div class="col-sm-10">
					<textarea class="field col-md-6" id="txtDescription" placeholder="Enter description of the app. less than 1000 characters"
										name="description" rows="12" maxlength="1000" style="width:90%">{{artifact.attributes.overview_description}}</textarea>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2" for="txtRecentChanges">Recent
					Changes <br><small>(Max. 700 characters)</small></label>
				<div class="col-sm-10">
					<textarea class="field col-md-6" id="txtRecentChanges" maxlength="1000"
                              placeholder="Enter recent changes you have done to the app. less than 700 characters."
										name="recentChanges" rows="6" style="width:90%">{{artifact.attributes.overview_recentchanges}}</textarea>
				</div>
			</div>
			
			
			<div id="control-packagename"	class="form-group">
									<label class="control-label col-sm-2" for="txtName">Version <span style="color:#FF0000">*</span></label>
									<div class="col-sm-10">
										<input class="field col-md-6" style="width: 110px" type="text"  value="{{artifact.attributes.overview_version}}"
										id="txtVersion" disabled="disabled">
									</div>
			</div>

            <div id="control-packagename"	class="form-group">
                <label class="control-label col-sm-2" for="txtKind">Category <span style="color:#FF0000">*</span></label>
                <div class="col-sm-10">
                    <select name="category"  id="txtCategory" class="field span3" >
						{{#categories}}
                            <option {{#compare this ../artifact.attributes.overview_category}}selected{{/compare}}>{{this}}</option>
						{{/categories}}
                    </select>
                </div>
            </div>

            <div id="control-packagename"	class="form-group">
                <label class="control-label col-sm-2" for="txtVisibility">Ristrict Visibility</label>
                <div class="col-sm-10">

                    <input type="text" id="txtVisibility" name="visibility" data-roles="{{artifact.attributes.overview_visibility}}" class='col-lg-6 col-sm-8 col-xs-6'
                           placeholder="type user role to search"/>
                </div>
            </div>

			

			<div class="form-group">
                <label class="control-label col-sm-2" for="txtBanner">Banner  <span style="color:#FF0000">*</span><br><small>(705px * 344px, .png)</small></label>
				<div class="col-sm-10">
					
					
					<div data-provides="fileupload" class="fileupload fileupload-exists"><input type="hidden" value="" name="">
						<div class="fileupload-preview fileupload-preview-banner thumbnail" style="line-height: 160px;"><img src="{{artifact.attributes.images_banner}}"></div>
						<div>
							<span class="btn btn-file"><span class="fileupload-new"><i class="icon-plus-sign"></i></span><span class="fileupload-exists"><i class="icon-edit"></i></span>
								<input type="file" id="txtBanner" name="bannerFile" value="{{artifact.attributes.images_banner}}">
							</span>
						</div>
					</div>
					
					
				</div>
				
			</div>





			<div class="form-group">
				<label for="txtScreenShot" class="control-label col-sm-2">Screen
					Shots  <span style="color:#FF0000">*</span><br><small>(288px * 512px, .png)</small></label>
				<div class="col-sm-10">

					{{#if artifact.attributes.images_screenshots.[0]}}
					<div data-provides="fileupload" class="fileupload fileupload-exists"><input type="hidden" value="" name="">
						<div class="fileupload-preview thumbnail" style="line-height: 240px;"><img src="{{artifact.attributes.images_screenshots.[0]}}"></div>
						<div>
							<span class="btn btn-file"><span class="fileupload-new"><i class="icon-plus-sign"></i></span><span class="fileupload-exists"><i class="icon-edit"></i></span>
								<input type="file" data-url="{{url "/api/apps/upload"}}" id="txtScreenShot1" name="screenshot1File" class="uploadAction">
							</span>
						</div>
					</div>
					{{/if}}

					{{#if artifact.attributes.images_screenshots.[1]}}
					<div data-provides="fileupload" class="fileupload fileupload-exists"><input type="hidden" value="" name="">
						<div class="fileupload-preview thumbnail" style="line-height: 240px;"><img src="{{artifact.attributes.images_screenshots.[1]}}"></div>
					<div>
							<span class="btn btn-file"><span class="fileupload-new"><i class="icon-plus-sign"></i></span><span class="fileupload-exists"><i class="icon-edit"></i></span>
								<input type="file" data-url="{{url "/api/apps/upload"}}" id="txtScreenShot2" name="screenshot2File" class="uploadAction">
							</span>
						</div>
					</div>

                     {{else}}

                        <div class="fileupload fileupload-new"
                             data-provides="fileupload">
                            <div class="fileupload-preview thumbnail"></div>
                            <div>
							<span class="btn btn-file"><span
                                    class="fileupload-new"><i class="icon-plus-sign"></i></span><span
                                    class="fileupload-exists"><i class="icon-edit"></i></span>
								<input
                                        type="file" class="uploadAction" name="screenshot2File"
                                        id="txtScreenShot2" data-url="{{url "/api/apps/upload"}}" />
							</span><a href="#" class="btn fileupload-exists"
                                      data-dismiss="fileupload"><i class="icon-remove"></i></a>
                            </div>
                        </div>

					{{/if}}

					{{#if artifact.attributes.images_screenshots.[2]}}
					<div data-provides="fileupload" class="fileupload fileupload-exists"><input type="hidden" value="" name="">
						<div class="fileupload-preview thumbnail" style="line-height: 240px;"><img src="{{artifact.attributes.images_screenshots.[2]}}"></div>
					<div>
							<span class="btn btn-file"><span class="fileupload-new"><i class="icon-plus-sign"></i></span><span class="fileupload-exists"><i class="icon-edit"></i></span>
								<input type="file" data-url="{{url "/api/apps/upload"}}" id="txtScreenShot3" name="screenshot3File" class="uploadAction">
							</span>
						</div>
					</div>

                    {{else}}

                        <div class="fileupload fileupload-new"
                             data-provides="fileupload">
                            <div class="fileupload-preview thumbnail"></div>
                            <div>
							<span class="btn btn-file"><span
                                    class="fileupload-new"><i class="icon-plus-sign"></i></span><span
                                    class="fileupload-exists"><i class="icon-edit"></i></span>
								<input
                                        type="file" class="uploadAction" name="screenshot3File"
                                        id="txtScreenShot3" data-url="{{url "/api/apps/upload"}}" />
							</span><a href="#" class="btn fileupload-exists"
                                      data-dismiss="fileupload"><i class="icon-remove"></i></a>
                            </div>
                        </div>


					{{/if}}


				</div>
			</div>


			<div class="form-group">
				<label for="txtIconfile" class="control-label col-sm-2">Icon file  <span style="color:#FF0000">*</span><br><small>(124px * 124px, .png)</small></label>
				<div class="col-sm-10">
					<div data-provides="fileupload" class="fileupload fileupload-exists"><input type="hidden" value="" name="">
						<div class="fileupload-preview fileupload-preview-icon thumbnail" style="line-height: 160px;"><img src="{{artifact.attributes.images_thumbnail}}"></div>
					<div>
							<span class="btn btn-file"><span class="fileupload-new"><i class="icon-plus-sign"></i></span><span class="fileupload-exists"><i class="icon-edit"></i></span>
								<input type="file" name="iconFile">
							</span>
						</div>
					</div>
				</div>
			</div>




            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <div id="saveButtons" class="form-actions">
                        <input type="submit" value="Update" class="btn btn-primary" name="addNewAssetButton">
                        <input type="hidden" value="{{shortName}}" name="{{shortName}}" id="meta-asset-type">
                        <a href="{{url "/assets/mobileapp/"}}" class="btn btn-mob-cancel">Cancel</a>
                    </div>
                </div>
            </div>

		</form>
	</div>

</div>











<style>
	.control-search{
		visibility: hidden;
	}
	
	input[type="file"] {
    	display: inline;
	}
	
</style>