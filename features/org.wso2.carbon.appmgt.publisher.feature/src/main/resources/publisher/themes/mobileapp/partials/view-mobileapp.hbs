<div class="content-div">

	<div class="row">
		<div class="col-xs-12">
			<div class="panel-body">
				<div class="space-right-20 pull-left">
					<img src="{{artifact.attributes.images_banner}}"
						 style="max-width: 400px; max-height: 400px" class="pull-left app-stand-alone-icon"/>
				</div>
				<div class="pull-left main-data-container">
					<img src="{{artifact.attributes.images_thumbnail}}"
						 style="width: 75px; margin-bottom: 10px;"/>
					<div>
						<label><b>Author: </b></label>
						<span>{{artifact.attributes.overview_provider}}</span><br/>
					</div>
					<div>
						<label><b>Name: </b></label>
						<span>{{artifact.attributes.overview_name}}</span><br/>
					</div>
					<div>
						<label><b>Display Name: </b></label>
						<span>{{artifact.attributes.overview_displayName}}</span><br/>
					</div>
					<div>
						<label><b>Version: </b></label>
						<span>{{artifact.attributes.overview_version}}</span><br/>
					</div>
					<div>
						<label><b>Type: </b></label>
						<span>{{artifact.attributes.overview_type}}</span><br/>
					</div>
					<div>
						<label><b>Status: </b></label>
						<span>{{artifact.lifecycleState}}</span><br/>
					</div>
					<div>
						<label><b>Created: </b></label>
						<span>{{artifact.attributes.overview_createdtime}}</span><br/>
					</div>
					<img src="{{url "/themes/mobileapp/img/mobileapps/"}}{{artifact.attributes.overview_platform}}.png"
						 style="width: 30px;">
				</div>
			</div>
		</div>
	</div>

	<div class="assetp-properties">
		<ul class="nav nav-tabs" id="assetp-tabs">
			<li class="active">
				<a href="#tab-properties" data-toggle="tab"
				   data-type="basic">{{t "Description"}}</a>
			</li>
			<li>
				<a href="#tab-changes" data-toggle="tab"
				   data-type="basic">{{t "Recent Changes"}}</a>
			</li>
			<li>
				<a href="#tab-screenshots" data-toggle="tab"
				   data-type="basic">{{t "Screenshots"}}</a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="tab-properties">
				<div class="content">{{artifact.attributes.overview_description}}</div>
			</div>
			<div class="tab-pane" id="tab-changes">
				<div class="content">{{artifact.attributes.overview_recentchanges}}</div>
			</div>
			<div class="tab-pane raw" id="tab-screenshots">
				<div class="content">
					{{#each artifact.attributes.images_screenshots}}
						{{#if this}}
							<img src="{{this}}"
								 style="max-height: 300px; max-width: 300px; margin: 10px;"/>
						{{/if}}
					{{/each}}
				</div>
			</div>
		</div>
	</div>

</div>