{{!-- page content - my apps page --}}
<div class="row">
    {{#each assets}}
        <div id="app-tile-{{id}}" class="col-xs-12 col-sm-4 col-md-3 col-lg-2">

            <div class="app-tile">
                <a href="{{accessUrl}}" target="_blank" data-id="{{id}}"
                   data-name="{{attributes.overview_name}}" data-version="{{attributes.overview_version}}"
                   data-context="{{attributes.overview_context}}" class="accessUrl">
                    <div class="app-tile-thumbnail">
                        {{#if isFavourite}}
                            {{> ribbons/favorite}}
                        {{else}}
                            {{#ifCond attributes.overview_advertiseOnly "==" "true"}}
                                {{> ribbons/advertise}}
                            {{/ifCond}}
                        {{/if}}

                        {{#if defaultThumbnail}}
                            <div class="thumbnail-default" style="background-color: #{{defaultThumbnail.color}};">
                                <div class="text-center-force">{{defaultThumbnail.text}}</div>
                            </div>
                        {{else}}
                            <div class="thumbnail-image">
                                <img src="{{attributes.images_thumbnail}}" />
                            </div>
                        {{/if}}

                        <div class="thumbnail-overlay" title="Click to launch app">
                        <span class="fw-stack">
                            <i class="fw fw-circle-outline fw-stack-2x"></i>
                            <i class="fw fw-deploy fw-stack-1x"></i>
                        </span>
                        </div>
                    </div>
                </a>

                <div class="app-tile-details">
                    <h4>{{attributes.overview_displayName}}</h4>
                    <h5>{{attributes.overview_version}}</h5>

                    <p>{{attributes.overview_provider}}</p>
                    <span class="rating">
                        {{assetRating rating}}
                    </span>

                    <div class="more-menu pull-right">
                        <a href="#" class="more-menu-btn dropdown-toggle" data-toggle="dropdown">
                            <i class="fw fw-ellipsis fw-rotate-90"></i>
                        </a>
                        <ul class="more-menu-items dropdown-menu">
                            {{#if ../user}}
                                {{#if isFavourite}}
                                    <li>
                                        <a href="#" id="rmv-{{id}}" data-name="{{attributes.overview_name}}"
                                           data-provider="{{attributes.overview_provider}}"
                                           data-version="{{attributes.overview_version}}" class="remove-from-fav">
                                            Remove from Favorites
                                        </a>
                                    </li>
                                {{else}}
                                    <li>
                                        <a href="#" id="add-{{id}}" data-name="{{attributes.overview_name}}"
                                           data-provider="{{attributes.overview_provider}}"
                                           data-version="{{attributes.overview_version}}" class="add-to-fav">
                                            Add to Favorites
                                        </a>
                                    </li>
                                {{/if}}
                            {{/if}}
                            {{#ifCond attributes.overview_advertiseOnly "==" "true"}}
                                <li>
                                    <a href="{{url "/t"}}/{{attributes.overview_appTenant}}/assets/webapp/{{attributes.overview_advertisedAppUuid}}">
                                        More Details
                                    </a>
                                </li>
                            {{else}}
                                <li><a href="{{tenantedUrl "/assets/webapp"}}/{{id}}">More Details</a></li>
                            {{/ifCond}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{#unless assets}}
    <div class="no-apps">
        <div class="jumbotron">
            <h1>
                <span class="fw fw-warning"></span> No Apps Here!
            </h1>

            <p class="lead add-padding-top-3x text-muted">
                Sorry, We could not find any apps for you.
            </p>
        </div>
    </div>
{{/unless}}

{{#unless config.isSelfSubscriptionEnabled}}
    {{#unless config.isEnterpriseSubscriptionEnabled}}
        <!-- Both subscription options disabled-->
        <!--Navigation-->
        {{#if assets}}
            <!-- pagination -->
            <div class="pull-right-lg pull-right-md text-center-sm text-center-xs add-padding-bottom-2x">
                <div class="btn-group" role="group">
                    {{#if leftNav}}
                        <a href="{{tenantedUrl "/extensions/assets/webapp/myapps?"}}{{this.urlQuery}}{{t "page="}}{{this.leftNav}}"
                           class="btn btn-default btn-lg" title="Previous">
                            <i class="fw fw-left fw-lg"></i>
                        </a>
                        {{#if rightNav}}
                            <a href="{{tenantedUrl "/extensions/assets/webapp/myapps?"}}{{this.urlQuery}}{{t "page="}}{{this.rightNav}}"
                               class="btn btn-default btn-lg" title="Next">
                                <i class="fw fw-right fw-lg"></i>
                            </a>
                        {{else}}
                            <a href="#" class="btn btn-default btn-lg disabled" title="Next">
                                <i class="fw fw-right fw-lg"></i>
                            </a>
                        {{/if}}
                    {{else}}
                        {{#if rightNav}}
                            <a href="#" class="btn btn-default btn-lg disabled" title="Previous">
                                <i class="fw fw-left fw-lg"></i>
                            </a>
                            <a href="{{tenantedUrl "/extensions/assets/webapp/myapps?"}}{{this.urlQuery}}{{t "page="}}{{this.rightNav}}"
                               class="btn btn-default btn-lg" title="Next">
                                <i class="fw fw-right fw-lg"></i>
                            </a>
                        {{else}}
                            <!--no pagination}-->
                        {{/if}}
                    {{/if}}
                </div>
            </div>
        {{/if}}
    {{/unless}}
{{/unless}}
