{{#with asset}}
    {{#attributes}}
        {{#if ../../inDashboard}}
            {{#if ../../../isDeviceSubscriptionEnabled}}
            <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget"
               data-toggle="modal"
               data-app="{{../../../id}}"
               data-platform="{{../../../attributes.overview_platform}}"
               data-aid="{{../../../id}}" data-type="{{../../../type}}"> {{t "Installed"}}</a>
            {{else}}
                {{#if ../../../../isDirectDownloadEnabled}}

                    <a id="btn-add-gadget-install" class="btn btn-primary"
                       data-app="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-aid="{{../../../../id}}" data-type="{{../../../../type}}"> {{t "Installed"}}</a>

                    {{else}}

                    <a id="btn-add-gadget-install-disabled" class="btn disabled"
                       data-app="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-aid="{{../../../../id}}" data-type="{{../../../../type}}"> {{t "Installed"}}</a>


                {{/if}}
            {{/if}}

            {{#if ../../../isEnterpriseInstallEnabled}}
                <a id="btn-ent-install" class="btn btn-primary" href="#modal-ent-install"
                   data-toggle="modal"
                   data-app="{{../../../id}}"
                   data-aid="{{../../../id}}"
                   data-platform="{{../../../attributes.overview_platform}}"
                   data-type="{{../../../type}}"> {{t "Ent. Install"}}</a>
                <input id="isEnterpriseInstallEnabled" type="hidden" value="true">
            {{/if}}

        {{else}}

            {{#if ../../../sso}}
                {{#if ../../../../user.username}}
                    {{#if ../../../../../isDeviceSubscriptionEnabled}}
                    <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget"
                       data-toggle="modal"
                       data-app="{{../../../../../id}}"
                       data-aid="{{../../../../../id}}"
                       data-platform="{{../../../../../attributes.overview_platform}}"
                       data-type="{{../../../../../type}}"> {{t "Install"}}</a>
                    {{else}}
                        <a id="btn-add-gadget-install" class="btn btn-primary" href="#modal-add-gadget"
                           data-toggle="modal"
                           data-app="{{../../../../../id}}"
                           data-aid="{{../../../../../id}}"
                           data-platform="{{../../../../../attributes.overview_platform}}"
                           data-type="{{../../../../../type}}"> {{t "Install"}}</a>
                     {{/if}}
                {{else}}
                    <a id="btn-add-gadget" class="btn btn-primary" href="{{tenantedUrl "/login"}}"
                       data-toggle="modal"
                        data-app="{{../../../../id}}"
                       data-aid="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-type="{{../../../../type}}"> {{t "Install"}}</a>
                {{/if}}

                {{#if ../../../../isEnterpriseInstallEnabled}}
                    <a id="btn-ent-install" class="btn btn-primary" href="#modal-ent-install"
                       data-toggle="modal"
                       data-app="{{../../../../id}}"
                       data-aid="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-type="{{../../../../type}}"> {{t "Ent. Install"}}</a>
                    <input id="isEnterpriseInstallEnabled" type="hidden" value="true">
                 {{/if}}

            {{else}}
                <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget"
                   data-toggle="modal"
                   data-app="{{../../../../id}}"
                   data-platform="{{../../../../attributes.overview_platform}}"
                   data-aid="{{../../../id}}" data-type="{{../../../type}}"> {{t "Install"}}</a>
            {{/if}}



        {{/if}}
       
    {{/attributes}}
{{/with}}


