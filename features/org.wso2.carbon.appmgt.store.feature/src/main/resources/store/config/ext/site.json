{
    "applyTo": "site",
    "import": [
        "/modules/rxt/ext/scripts/form.overview.exporter.js",
        "/modules/rxt/ext/scripts/form.exporter.js"
    ],
    "fieldPropertyRules": [
        "overview.name:label=Name",
        "overview.provider:order=2",
        "overview.description:order=3",
        "overview.version:order=4",
        "overview.isbn:order=5",
        "overview.name:search=true",
        "overview.provider:search=true",
        "overview.version:search=true"
    ],
    "link": [
        "overview.stage:value=*.lifecycleState"
    ],
    "fieldProperties": [
        {
            "field": "*",
            "name": "order",
            "value": ""
        },
        {
            "field": "*",
            "name": "hidden",
            "value": "false"
        },
        {
            "field": "*",
            "name": "visible",
            "value": "true"
        },
        {
            "field": "overview.*",
            "name": "search",
            "value": "false"
        }
    ],
    "storage": {
        "images_banner": {
            "lifecycle": {
                "created": [
                    "private_{overview_provider}"
                ],
                "in-review": [
                    "reviewer",
                    "private_{overview_provider}"
                ],
                "published": [
                    "Internal/everyone",
                    "private_{overview_provider}",
                    "reviewer",
                    "anon"
                ],
                "unpublished": [
                    "private_{overview_provider}"
                ]
            }
        },
        "images_thumbnail": {
            "lifecycle": {
                "created": [
                    "private_{overview_provider}"
                ],
                "in-review": [
                    "reviewer",
                    "private_{overview_provider}"
                ],
                "published": [
                    "Internal/everyone",
                    "private_{overview_provider}",
                    "reviewer",
                    "anon"
                ],
                "unpublished": [
                    "private_{overview_provider}"
                ]
            }
        }
    }
}
