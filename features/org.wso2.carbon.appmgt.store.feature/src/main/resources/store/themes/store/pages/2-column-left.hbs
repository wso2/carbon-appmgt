<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{title}}</title>

    <link rel="shortcut icon" href="{{url "/themes/store/libs/theme-wso2_1.0/images/favicon.png"}}" />
    <!-- Bootstrap CSS -->
    <link href="{{url "/themes/store/libs/bootstrap_3.3.5/css/bootstrap.min.css"}}" rel="stylesheet" type="text/css" />
    <!-- Font WSO2 CSS -->
    <link href="{{url "/themes/store/libs/font-wso2_1.0.0/css/font-wso2.min.css"}}" rel="stylesheet" type="text/css" />
    <!-- Theme WSO2 CSS -->
    <link href="{{url "/themes/store/libs/theme-wso2_1.0/css/theme-wso2.css"}}" rel="stylesheet" type="text/css" />
    <!-- AppM CSS -->
    <link href="{{url "/themes/store/css/appm-main-styles.css"}}" rel="stylesheet" type="text/css" />
    <link href="{{url "/themes/store/css/appm-left-column-styles.css"}}" rel="stylesheet" type="text/css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="{{url "/themes/store/libs/html5shiv_3.7.2/html5shiv.min.js"}}"></script>
    <script src="{{url "/themes/store/libs/respond_1.4.2/respond.min.js"}}"></script>
    <![endif]-->

    <!--other CSS -->
    {{css}}
</head>

<body>
<!-- header -->
{{include header}}

<!-- page content wrapper -->
<div class="page-content-wrapper">
    <div class="media">
        <!-- media left -->
        <div class="media-left">
            {{include leftColumn}}
        </div>

        <!-- media body -->
        <div class="media-body">
            <!-- Search -->
            {{include search}}
            <!-- page -->
            <div class="container-fluid body-wrapper">
                <div class="page-header">
                    {{include pageHeader}}
                </div>

                <div class="page-content">
                    {{include pageContent}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- footer -->
{{>footer}}

<!-- Jquery/Jquery UI JS -->
<script src="{{url "/themes/store/libs/jquery_1.11.0/jquery-1.11.3.min.js"}}"></script>
<!-- Bootstrap JS -->
<script src="{{url "/themes/store/libs/bootstrap_3.3.5/js/bootstrap.min.js"}}"></script>
<!-- Theme WSO2 JS -->
<script src="{{url "/themes/store/libs/theme-wso2_1.0/js/theme-wso2.js"}}"></script>
<!-- caramel client-side JS -->
<script src="{{url "/themes/store/js/caramel/caramel-client.js"}}"></script>
<script src="{{url "/themes/store/js/caramel/caramel.handlebars.client.js"}}"></script>
<script src="{{url "/themes/store/js/caramel/async.min.js"}}"></script>
<!--handlebars JS -->
<script src="{{url "/themes/store/js/handlebars/handlebars.js"}}"></script>
<!-- noty JS -->
<script src="{{url "/themes/store/js/noty/jquery.noty.js"}}"></script>
<script src="{{url "/themes/store/js/noty/layouts/center.js"}}"></script>
<script src="{{url "/themes/store/js/noty/themes/default.js"}}"></script>
<!--other JS -->
{{js}}
</body>
</html>